FROM rocker/shiny-verse

RUN apt-get update --allow-releaseinfo-change -qq && apt-get install -y \
  libc6-dev \
  git-core \
  libssl-dev \
  libcurl4-openssl-dev \
  libxml2-dev \
  pandoc \
  libpq-dev \
  python3.6 \
  virtualenv \
  python3-pip \
  python3-venv \
  libssl-dev \
  postgresql-client \
  libgdal-dev \
  libudunits2-dev \
  libsasl2-dev

RUN R -e "install.packages('devtools', dependencies=TRUE)"
RUN R -e "install.packages('tidyverse', dependencies=TRUE)"
RUN R -e "install.packages('shiny', dependencies=TRUE)"
RUN R -e "install.packages('shinydashboard', dependencies=TRUE)"
RUN R -e "install.packages('httr', dependencies=TRUE)"
RUN R -e "install.packages('jsonlite', dependencies=TRUE)"
RUN R -e "install.packages('shinycssloaders', dependencies=TRUE)"
RUN R -e "install.packages('ggplot2', dependencies=TRUE)"
RUN R -e "install.packages('glue', dependencies=TRUE)"
RUN R -e "install.packages('scales', dependencies=TRUE)"
RUN R -e "install.packages('promises', dependencies=TRUE)"
RUN R -e "install.packages('future', dependencies=TRUE)"
RUN R -e "install.packages('renv', dependencies=TRUE)"
RUN R -e "devtools::install_github('fdrennan/drenplot', dependencies=TRUE)"
RUN R -e "devtools::install_github('fdrennan/ndexssh', dependencies=TRUE)"
RUN R -e "devtools::install_github('fdrennan/ndexshell', dependencies=TRUE)"
RUN R -e "devtools::install_github('fdrennan/ndexpg', dependencies=TRUE)"
RUN R -e "devtools::install_github('fdrennan/biggr', dependencies=TRUE)"

COPY ./productorapp /home/productorapp

RUN R -e "setwd('/home/productorapp'); devtools::install()"

