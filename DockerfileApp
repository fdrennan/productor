FROM rocker/shiny-verse

RUN apt-get update --allow-releaseinfo-change -qq && apt-get install -y \
  libc6-dev \
  git-core \
  libssl-dev \
  libcurl4-openssl-dev \
  libxml2-dev \
  pandoc \
  libpq-dev \
  python3.6 \
  virtualenv \
  python3-pip \
  python3-venv \
  libssl-dev \
  postgresql-client \
  libgdal-dev \
  libudunits2-dev \
  libsasl2-dev

RUN R -e "install.packages('devtools')"
RUN R -e "install.packages('tidyverse')"
RUN R -e "install.packages('shiny')"
RUN R -e "install.packages('shinydashboard')"
RUN R -e "install.packages('httr')"
RUN R -e "install.packages('jsonlite')"
RUN R -e "install.packages('shinycssloaders')"
RUN R -e "install.packages('ggplot2')"
RUN R -e "install.packages('glue')"
RUN R -e "install.packages('scales')"
RUN R -e "install.packages('promises')"
RUN R -e "install.packages('future')"
RUN R -e "devtools::install_github('fdrennan/drenplot')"
RUN R -e "devtools::install_github('fdrennan/drenplot')"
RUN R -e "devtools::install_github('fdrennan/ndexssh')"
RUN R -e "devtools::install_github('fdrennan/ndexshell')"
RUN R -e "devtools::install_github('fdrennan/ndexpg')"

COPY ./productorapp /home/productorapp

RUN R -e "setwd('/home/productorapp'); devtools::install()"

