FROM python:3.7.6

WORKDIR /root

RUN echo 'deb http://cloud.r-project.org/bin/linux/debian buster-cran35/' >> /etc/apt/sources.list

RUN apt-get install dirmngr

RUN apt-key adv --keyserver keys.gnupg.net --recv-key 'E19F5F87128899B192B1A2C2AD5F960A256A04AF'

RUN apt-get update && apt-get install -y --no-install-recommends \
    vim \
    r-base \
    r-base-dev \
    littler \
    git-core \
    libssl-dev \
    libssh2-1-dev \
    default-jdk \
    libcurl4-openssl-dev \
    libxml2-dev \
    libssl-dev \
    libsasl2-dev \
    postgresql-client \
    libudunits2-dev \
    libgdal-dev \
    libpq-dev -y

COPY ./airflow.requirements.txt /root/airflow.requirements.txt

RUN pip install --no-deps --trusted-host pypi.python.org -r airflow.requirements.txt

WORKDIR /home/scripts

RUN R -e "install.packages('tidyverse', dependencies=TRUE)"
RUN R -e "install.packages('devtools', dependencies=TRUE)"
RUN R -e "install.packages('RPostgres', dependencies=TRUE)"
RUN R -e "install.packages('DBI', dependencies=TRUE)"
RUN R -e "install.packages('glue', dependencies=TRUE)"
RUN R -e "install.packages('fs', dependencies=TRUE)"
RUN R -e "install.packages('jsonlite', dependencies=TRUE)"
RUN R -e "install.packages('tictoc', dependencies=TRUE)"
RUN R -e "install.packages('openxlsx', dependencies=TRUE)"
RUN R -e "install.packages('dlstats', dependencies=TRUE)"
RUN R -e "install.packages('dbx', dependencies=TRUE)"
RUN R -e "install.packages('magrittr', dependencies=TRUE)"
RUN R -e "install.packages('forcats', dependencies=TRUE)"
RUN R -e "install.packages('stringr', dependencies=TRUE)"
RUN R -e "install.packages('lubridate', dependencies=TRUE)"
RUN R -e "install.packages('gridExtra', dependencies=TRUE)"
RUN R -e "install.packages('ggrepel', dependencies=TRUE)"
RUN R -e "install.packages('urbnmapr', dependencies=TRUE)"
RUN R -e "install.packages('dplyr', dependencies=TRUE)"
RUN R -e "install.packages('ggridges', dependencies=TRUE)"
RUN R -e "install.packages('viridis', dependencies=TRUE)"
RUN R -e "install.packages('hrbrthemes', dependencies=TRUE)"
RUN R -e "install.packages('usethis', dependencies=TRUE)"
RUN R -e "install.packages('readr', dependencies=TRUE)"
RUN R -e "install.packages('rlang', dependencies=TRUE)"
RUN R -e "install.packages('sysfonts', dependencies=TRUE)"
RUN R -e "install.packages('purrr', dependencies=TRUE)"
RUN R -e "install.packages('tibble', dependencies=TRUE)"
RUN R -e "install.packages('reticulate', dependencies=TRUE)"
RUN R -e "install.packages('renv', dependencies=TRUE)"
RUN R -e "devtools::install_github('UrbanInstitute/urbnmapr', dependencies=TRUE)"
RUN R -e "devtools::install_github('fdrennan/drenplot', dependencies=TRUE)"
RUN R -e "devtools::install_github('fdrennan/ndexssh', dependencies=TRUE)"
RUN R -e "devtools::install_github('fdrennan/ndexshell', dependencies=TRUE)"
RUN R -e "devtools::install_github('fdrennan/ndexpg', dependencies=TRUE)"
RUN R -e "devtools::install_github('fdrennan/biggr', dependencies=TRUE)"

COPY ./productor /home/productor

RUN R -e "setwd('/home/productor'); devtools::install(dependencies=TRUE)"

